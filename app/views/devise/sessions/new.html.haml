.login
  .container
    = image_tag("logo.png")
    = form_for(resource, as: resource_name, url: session_path(resource_name), local: true, data: { turbo: false }) do |f|
      .field.un
        = f.text_field :username, autofocus: true, autocomplete: "username",placeholder:"Username"
      .field.ps
        = f.password_field :password, autocomplete: "current-password",placeholder:"Password"
      .actions
        = f.submit "Log in"
      - if devise_mapping.rememberable?
        .field.cb
          = f.check_box :remember_me
          = f.label :remember_me
    = render "devise/shared/links"
:css
  .login{
    display:flex;
    align-items:center;
    justify-content:center;
    min-height:100vh;
    background-image: url('/assets/bg.jpg');
  }
  .container{
    text-align:left;
    background:rgba(255,255,255,0.6);
    height:350px;
    width:300px;
    padding-left:20px;
    padding-top:20px;
    padding-bottom:5px;
  }
  .s{
    width:100%;
    background-color:#9e005d;
  }
  .un,.ps,.cb{
    padding-top:10px;
    padding-bottom:10px;
  }
  .un,.ps{
    width:400px;
  }
